---
import Layout from '~/layouts/Layout.astro';
import Header from '~/components/widgets/Header-PochomLab.astro';
import Footer from '~/components/widgets/Footer.astro';
import Announcement from '~/components/widgets/Announcement.astro';

import { headerData , footerData } from '~/navigation';

import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
}

import { headerLinksJa } from '~/navigation/ja';
import { headerLinksEn } from '~/navigation/en';
const { metadata } = Astro.props;
// lang判定（/en と /en/... を英語、それ以外は日本語）
const pathname = Astro.url.pathname;
const lang = (pathname === '/en' || pathname.startsWith('/en/')) ? 'en' : 'ja';
const localizedLinks = (lang === 'en' ? headerLinksEn : headerLinksJa);
---

<Layout metadata={metadata}>
  <slot name="announcement">
    <Announcement />
  </slot>
  <slot name="header">
    <!-- <Header {...headerData} isSticky showRssFeed showToggleTheme /> 
    <Header {...headerData} isSticky showRssFeed showToggleTheme />
    -->
  <Header {...headerData} links={localizedLinks} isSticky showToggleTheme />   
  </slot>
  <main>
    <slot />
  </main>
  <slot name="footer">
    <Footer {...footerData} />
  </slot>
</Layout>
