---
import PageLayout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header-PochomLab.astro';

//import { headerData } from '~/navigation';
import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
}
const { metadata } = Astro.props;

import { headerLinksJa } from '~/navigation/ja';
import { headerLinksEn } from '~/navigation/en';
// lang判定（/en と /en/... を英語、それ以外は日本語）
const pathname = Astro.url.pathname;
const lang = (pathname === '/en' || pathname.startsWith('/en/')) ? 'en' : 'ja';
const localizedLinks = (lang === 'en' ? headerLinksEn : headerLinksJa);
---

<PageLayout metadata={metadata}>
  <Fragment slot="announcement">
    <slot name="announcement" />
  </Fragment>
  <Fragment slot="header">
    <slot name="header">
      <Header
        links={localizedLinks?.length ? [localizedLinks[0]] : undefined}
        actions={[
          {
            text: 'Download',
            href: 'https://github.com/arthelokyo/astrowind',
          },
        ]}
        showToggleTheme
        position="right"
      />
    </slot>
  </Fragment>
  <slot />
</PageLayout>
