---
import '~/assets/styles/tailwind.css';

import { I18N } from 'astrowind:config';

import CommonMeta from '~/components/common/CommonMeta.astro';
import Favicons from '~/components/Favicons.astro';
import CustomStyles from '~/components/CustomStyles.astro';
import ApplyColorMode from '~/components/common/ApplyColorMode.astro';
import Metadata from '~/components/common/Metadata.astro';
import SiteVerification from '~/components/common/SiteVerification.astro';
import Analytics from '~/components/common/Analytics-PochomLab.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';
import ConsentBanner from '~/components/common/ConsentBanner.astro';

// Comment the line below to disable View Transitions
import { ClientRouter } from 'astro:transitions';

import type { MetaData as MetaDataType } from '~/types';

export interface Props {
  metadata?: MetaDataType;
}

const { metadata = {} } = Astro.props;
//const { language, textDirection } = I18N;

// ===== Locale detection from URL (/ja, /en) =====
const pathname = Astro.url.pathname; // /ja, /ja/xxx, /en, /en/xxx
const origin = Astro.url.origin;

const isJa = pathname === '/ja' || pathname.startsWith('/ja/');
const isEn = pathname === '/en' || pathname.startsWith('/en/');

// <html lang> はURLに合わせて上書き（I18Nはデフォルト値として残す）
const { textDirection } = I18N;
const language = isEn ? 'en' : 'ja';

// canonical（今見てるURLを正規として宣言）
const canonicalPath = pathname.replace(/\/$/, '') || '/';
const canonicalUrl = `${origin}${canonicalPath}`;

// hreflang（/ja <-> /en の対応URLを宣言）
const jaPath = (isJa || isEn) ? pathname.replace(/^\/(ja|en)(?=\/|$)/, '/ja') : '/ja';
const enPath = (isJa || isEn) ? pathname.replace(/^\/(ja|en)(?=\/|$)/, '/en') : '/en';

const jaUrl = `${origin}${jaPath}`;
const enUrl = `${origin}${enPath}`;

// ルートは /ja に寄せる運用なので x-default は /ja を推奨（任意）
const xDefaultUrl = `${origin}/ja`;

const isProd = import.meta.env.PROD;
---

<!doctype html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <CommonMeta />
    <Favicons />
    <CustomStyles />
    <ApplyColorMode />
    <Metadata {...metadata} />

    <!-- Canonical & hreflang (ja/en) -->
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" hreflang="ja" href={jaUrl} />
    <link rel="alternate" hreflang="en" href={enUrl} />
    <link rel="alternate" hreflang="x-default" href={xDefaultUrl} />

    <SiteVerification />
    <Analytics />

    <!-- Comment the line below to disable View Transitions -->
     <!-- 
    <ClientRouter fallback="swap" />
     -->
    {isProd ? null : <ClientRouter fallback="swap" />}    
  </head>

  <body class="antialiased text-default bg-page tracking-tight">
    <slot />

    <BasicScripts />
    <ConsentBanner />
  </body>
</html>
